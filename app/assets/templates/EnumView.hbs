<div class="form-group">
	<div class="form-group">
		<label for="materials">Materials</label>
		<select class="form-control" id="material">
			{{#each itemEnums.material}}
				<option>{{.}}</option>
			{{/each}}
		</select>
	</div>
	<div class="checkbox">
		<label>
			<input type="checkbox" name="restrictedCheck" value="">
				<strong>Check this box</strong> if the listing contains or may contain restricted materials
		</label>
	</div>
	<label for="measurements">Measurements</label>
	<div class="form-group">
		Measurements are in:  
			{{#each itemEnums.measurement.unit}}
			 	<label class="radio-inline" id="measureUnits">
					<input type="radio" name="unitmeasure" value="{{.}}">{{.}}
				</label>
			{{/each}}
	</div>
	<div class="form-group">
		Measured item is:
			{{#each itemEnums.measurement.shape}}
				<label class="radio-inline">
					<input type="radio" name="shape" id="shapeSelection" value="{{.}}">{{.}}
				</label>
			{{/each}}
	</div>
		<div class="row">
			<div class="col-md-2 col-lg-2">
				<label for="length">Length:</label>
				<div class="input-group">
					<input type="text" class="form-control" id="length" disabled>
					<span class="input-group-addon">{{itemEnums.measurement.unit.in @key}}</span>
				</div>
				<label for="height">Height:</label>
				<div class="input-group">
					<input type="text" class="form-control" id="height" disabled>
					<span class="input-group-addon">{{itemEnums.measurement.unit.in @key}}</span>
				</div>
			</div>
			<div class="col-md-2 col-lg-2">
				<label for="depth">Depth:</label>
				<div class="input-group">
					<input type="text" class="form-control" id="depth" disabled>
					<span class="input-group-addon">{{itemEnums.measurement.unit.in @key}}</span>
				</div>
				<label for="diameter">Diameter:</label>
				<div class="input-group">
					<input type="text" class="form-control" id="diameter" disabled>
					<span class="input-group-addon">{{itemEnums.measurement.unit.in @key}}</span>
				</div>
			</div>
		</div>
	<div class="form-group">
		<label for="condition">Condition (Select one)</label>
			<div class="form-group">
				{{#each itemEnums.condition.description}}
					<label class="radio-inline">
						<input type="radio" class="conditionRadio" name="condition" value="{{.}}">{{.}}
					</label>
				{{/each}}
			</div>
	</div>
</div>